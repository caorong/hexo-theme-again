  </section>

  <section class="description">
    <img class="avatar" src="<%- url_for(theme.avatar) %>" alt="avatar" />
    <h1 class="title"> <%- theme.title %> </h1>
    <h3 class="subtitle"> <%- theme.subtitle %> </h3>
  </section>

  <ul class="social-list">
    <% if (theme.social.twitter){ %><a href="<%- theme.social.twitter %>">Twitter</a><% } %>
    <% if (theme.social.github){ %><a href="<%- theme.social.github %>">GitHub</a><% } %>
    <% if (theme.social.weibo){ %><a href="<%- theme.social.weibo %>">Weibo</a><% } %>
  </ul>
</header>
